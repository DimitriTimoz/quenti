{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "@quenti/next#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "start": {
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "passThroughEnv": ["ANALYZE"]
    },
    "dev": {
      "cache": false
    }
  },
  "globalDependencies": [
    "**/.env",
    "yarn.lock",
    "packages/website/**/*",
    "packages/integrations/**/*"
  ],
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "VERCEL",
    "VERCEL_URL",
    "STRIPE_PRIVATE_KEY",
    "SKIP_ENV_VALIDATION",
    "ANALYZE"
  ]
}
